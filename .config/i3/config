#* [MENU] Power/system-setting functions

# new
bindsym $Y+Escape exec --no-startup-id $rofi/powermenu.sh

# old
# todo: блять в рофи ибернации нету
bindsym $Y+$S+Escape mode "$wine_system"
set $wine_system (l)ock (e)xit switch-(u)ser (s)uspend (h)ibernate (r)eboot (S+s)hutdown (S+e)xit_X_ses
mode "$wine_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym $S+s exec --no-startup-id i3exit shutdown, mode "default"
    bindsym $S+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

    # exit system mode: "Enter" or "Escape"
    bindsym Escape mode "default"
}


