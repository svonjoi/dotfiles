    bindsym h          exec --no-startup-id dunstctl history-pop
    bindsym w          exec --no-startup-id dunstctl close-all && $bin/notifications/dunst_manage.sh workmode enable
    bindsym $S+w       exec --no-startup-id dunstctl close-all && $bin/notifications/dunst_manage.sh workmode disable
    bindsym d          exec --no-startup-id dunstctl close
    bindsym c          exec --no-startup-id dunstctl context

    bindsym Escape mode "default"
}


#* [MENU] Monitor control
bindsym $Y+F11 mode "$wine_monitor_control"
set $wine_monitor_control  󰓏 [q|x|w|e|r|m]:[VM|MV|L|ML|VML|M] 󰓏 ws2output [Alt]+[1|2|3]:M|V|L 
mode "$wine_monitor_control" {

    # reapply xrandr configuration & reload polybar & apply xmodmap

    set $log "/tmp/display.log"

    bindsym q exec --no-startup-id $bin/setup_display.sh --setup_vm > $log 2>&1; mode "default"

    # valid for connecting vertical monitor via docking (is always appear as dp-1) and via dp-1 port directly in laptop
    bindsym x exec --no-startup-id $bin/setup_display.sh --setup_mv > $log 2>&1; mode "default"

    bindsym w exec --no-startup-id $bin/setup_display.sh --setup_l > $log 2>&1; mode "default"
    bindsym e exec --no-startup-id $bin/setup_display.sh --setup_ml > $log 2>&1; mode "default"
    bindsym r exec --no-startup-id $bin/setup_display.sh --setup_vml > $log 2>&1; mode "default"
    bindsym m exec --no-startup-id $bin/setup_display.sh --setup_m > $log 2>&1; mode "default"

    bindsym $A+1 [class=".*"] move workspace to output $outHDMI
    bindsym $A+2 [class=".*"] move workspace to output $out_DP_2
    bindsym $A+3 [class=".*"] move workspace to output $outLaptop

    bindsym Escape mode "default"
}

#* [MENU] Control menu
# bindsym $M+F12 mode "$wine_reload"
bindsym $Y+F12 mode "$wine_reload"
set $wine_reload [] (r)rst-i3 (c)rld-config-i3 (s)sxkhd (p)picom (d)dunst (f)setup_hw (o)polybar
mode "$wine_reload" {

    # reload sxkhd
    bindsym s exec --no-startup-id killall sxhkd && setsid -f sxhkd && notify-send "[sxhkd] reloaded"

    # reload the configuration file
    # bindsym 2 reload && notify-send "[i3] reload the configuration file"
    bindsym c exec --no-startup-id i3-msg reload && notify-send "[i3] reload the configuration file"
    
    # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
    # bindsym r restart && notify-send "[i3] restart i3"
    bindsym r exec --no-startup-id i3-msg restart && notify-send "[i3] restart i3 inplace"

    # restart picom
    bindsym p exec --no-startup-id picom -b && notify-send "[picom] reloaded"

    # reload dunst
    bindsym d --release exec killall dunst && notify-send "[dunst] reloaded"

    # reload polybar
    bindsym o polybar-msg cmd restart && notify-send "[polybar] reloaded"

    # wifi, vpn, etc
    #bindsym n exec --no-startup-id kitty --class=kitty_nmtui -e nmtui, mode "default"
    #bindsym n exec --no-startup-id alacritty -e nmtui, mode "default"
    #bindsym n exec terminal -e 'nmtui', mode "default"
    
    # fix hardware
    bindsym f exec --no-startup-id $bin/hardware/setup_hw.sh 2>&1, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Escape mode "default"
}


